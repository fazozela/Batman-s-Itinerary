<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/villain_img"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:adjustViewBounds="false"
            android:scaleType="fitXY"
            android:src="@drawable/joker1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/villain_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-black"
            android:text="Joker"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/villain_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/villain_danger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Peligroso"
            app:layout_constraintStart_toStartOf="@+id/villain_name"
            app:layout_constraintTop_toBottomOf="@+id/villain_name" />

        <TextView
            android:id="@+id/villain_last_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:text="Visto: Barrio Lozada"
            app:layout_constraintStart_toStartOf="@+id/villain_danger"
            app:layout_constraintTop_toBottomOf="@+id/villain_danger" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>